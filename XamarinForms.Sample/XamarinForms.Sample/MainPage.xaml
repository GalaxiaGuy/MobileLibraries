<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GamesWithGravitas.XamarinForms.Sample"
             xmlns:gl="clr-namespace:GamesWithGravitas.XamarinForms;assembly=GamesWithGravitas.XamarinForms.Layout"
             x:Class="XamarinForms.Sample.MainPage">
    <ScrollView VerticalOptions="FillAndExpand">
        <StackLayout gl:Layout.ItemsSource="{Binding Items}" VerticalOptions="Center">
            <gl:Layout.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Title}" Command="{Binding Command}"/>
                </DataTemplate>
            </gl:Layout.ItemTemplate>
        </StackLayout>
    </ScrollView>

</ContentPage>